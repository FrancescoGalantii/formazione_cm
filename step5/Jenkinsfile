pipeline {
    agent any

    environment {
        REGISTRY = 'localhost:5000'
        IMAGE_NAME = 'myimage'
        TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir ('step5') {
                    script {
                        def imageTag = "${REGISTRY}/${IMAGE_NAME}:${TAG}"
                        docker.build(imageTag, '.')
                    }
                }
            }
        }

        stage('Tagging Image') {
            steps {
                script {
                    def currentDate = new Date().format('yyyyMMddHHmmss')
                    def progressiveTag = "${REGISTRY}/${IMAGE_NAME}:${currentDate}"
                    docker.image("${REGISTRY}/${IMAGE_NAME}:${TAG}").tag(progressiveTag)
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    def progressiveTag = "${REGISTRY}/${IMAGE_NAME}:${new Date().format('yyyyMMddHHmmss')}"
                    docker.image(progressiveTag).push()
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
