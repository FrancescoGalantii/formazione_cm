pipeline {
    agent any
    environment {
        REGISTRY_CREDENTIALS = 'registry-credentials'
        REGISTRY = 'registry'
        IMAGE_NAME = 'mystep5'
        TAG = 'latest'
        progressiveTag = ''
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir ('step5') {
                    script {
                        def imageTag = "${REGISTRY}/${IMAGE_NAME}:${TAG}"
                        docker.build(imageTag, '.')
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                dir('step5') {
                    script {
                        def tag = "build-${env.BUILD_NUMBER}"
                        def imageName = "mystep5:${tag}"
                        def image = docker.build(imageName)

                        docker.withRegistry("http://${env.REGISTRY_URL}") {
                            image.push()
                        }
                    }
                }
            }
        
    }
    post {
        always {
            cleanWs()
        }
    }
}
