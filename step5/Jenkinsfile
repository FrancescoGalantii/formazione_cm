pipeline {
    agent any
    environment {
        REGISTRY = 'localhost:5000'
        IMAGE_NAME = 'mystep5'
        TAG = 'latest'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('step5') {
                    script {
                        def imageTag = "${REGISTRY}/${IMAGE_NAME}:${TAG}"
                        // Costruisci l'immagine Docker
                        docker.build(imageTag, '.')
                    }
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                dir('step5') {
                    script {
                        def tag = "build-${env.BUILD_NUMBER}"
                        def imageName = "${REGISTRY}/${IMAGE_NAME}:${tag}"

                        // Recupera l'immagine costruita e pushala
                        def image = docker.image(imageName)  // Ottieni l'immagine costruita nel primo stage

                        docker.withRegistry('http://localhost:5000') {
                            image.push()  // Fai il push
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()  // Pulisci l'ambiente di lavoro dopo ogni esecuzione
        }
    }
}
