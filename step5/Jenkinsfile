pipeline {
    agent any
    environment {
        REGISTRY = “registry”
        IMAGE_NAME = “mystep5”
        IMAGE_TAG = "latest"
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    docker.withRegistry("https://${REGISTRY}", 'registry-credentials') {
                        def image = docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                        image.push() 
                        env.BUILD_IMAGE = image.id 
                    }
                }
            }
        }
        stage('Tag Image') {
            steps {
                script {
                    docker.withRegistry("https://${REGISTRY}", 'registry-credentials') {
                        def tag = "v1.0.${env.BUILD_NUMBER}"
                        def image = docker.image("${REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}")
                        image.push(tag) 
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
